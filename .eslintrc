{
  "extends": ["prettier", "eslint:recommended"],
  "plugins": ["import"],
  "globals": {
    "__DEV__": true
  },
  "env": {
    "es6": true,
    "jest": true,
    "browser": true,
    "node": true
  },
  "overrides": [
    {
      "files": ["*.ts"],
      "parser": "@typescript-eslint/parser",
    }
  ],
  "rules": {
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": [
          "test/*.ts",
          "test/*.js",
          "rollup.config.js",
          "jest.config.cjs"
        ],
        "optionalDependencies": false,
        "peerDependencies": true
      }
    ]
  },
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  }
}
